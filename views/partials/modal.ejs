<!--CREATE NEW POST MODAL-->

<div class="modal fade bd-example-modal-lg create-post-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
aria-hidden="true">
<div class="modal-dialog modal-lg">
    <div class="modal-content">
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="#">FoodieGram</a>
            </nav>

            <div id="post-modal" class="mt-3">
                <h2 align="center">Create New Post</h2>
                <form action="/foodies" method="POST">
                    <div class="form-group">
                        <div id="img-place">
                            <input type="file" class="form-control-file" name="photo">
                        </div>
                    </div>
                    <div class="form-group star">
                        <div class="rating">
                            <label>
                                <input type="radio" name="rating" value="1" />
                                <span class="icon">★</span>
                            </label>
                            <label>
                                <input type="radio" name="rating" value="2" />
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                            </label>
                            <label>
                                <input type="radio" name="rating" value="3" />
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                            </label>
                            <label>
                                <input type="radio" name="rating" value="4" />
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                            </label>
                            <label>
                                <input type="radio" name="rating" value="5" />
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group mt-0">
                        <input type="text" class="form-control" rows="3" name="caption" placeholder="Write a caption">
                    </div>
                    <div class="form-group">
                        <label for="restaurantName">Restaurant Name:</label>
                        <input type="text" class="form-control" name="restaurantName" placeholder="XYZ">
                    </div>
                    <div class="form-group">
                        <label for="restaurantAddr">Address:</label>
                        <input type="text" class="form-control" autocomplete="street-address"
                            name="restaurantAddr" placeholder="1234 Main St">
                    </div>
                    <div class="form-group">
                        <label for="cuisine">Cuisine:</label>
                        <select class="form-control" name="cuisine">
                            <option value="American">American</option>
                            <option value="Asian">Asian</option>
                            <option value="Mexican">Mexican</option>
                            <option value="Italian">Italian</option>
                            <option value="Middle Eastern">Middle Eastern</option>
                            <option value="Thai">Thai</option>
                            <option value="French">French</option>
                            <option value="Japanese">Japanese</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-around">
                        <button type="submit" class="btn btn-danger mb-2" data-dismiss="modal"
                            aria-label="Close">Cancel</button>
                        <button type="submit" class="btn btn-primary mb-2">Add Post</button>
                    </div>
                </form>
            </div>

    </div>
</div>
</div>

