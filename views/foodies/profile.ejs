<%- include('../partials/header') %>


<div class="container-fluid">
    <div id="profile-card" class="card mb-3 ml-4 mr-4">
        <div class="row no-gutters">
            <div class="col-md-4">
                
                <img src="<%= foodie.avatar %>" class="card-img" alt="profile picture">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= foodie.name %></h5>
                    <p class="card-text">Username: <%= foodie.username%></p>
                    <p class="card-text"><%= foodie.email%></p>
                    <p class="card-text">Total # Posts: <%= foodie.posts.length %> </p>
                    <p class="card-text">Total # Comments: <%= foodie.comments.length %></p>
                    <p class="card-text"><small class="text-muted">Member Since:
                            <%= foodie.createdAt.toLocaleDateString() %></small></p>
                </div>
            </div>
        </div>
    </div>
    <h1 class="ml-4">My Posts</h1>

    <div class="row no-gutters">
        <div class="col-md-12 mb-4 ">
            <form class="form-inline my-2 my-lg-0 justify-content-end mr-3">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-primary my-2 my-sm-0 mr-5" type="submit">Search</button>

                <select class="custom-select custom-select-md mr-5">
                    <option selected hidden>Filter</option>
                    <option value="User">User</option>
                    <option value="Category">Category</option>
                    <option value="Rating">Rating</option>
                </select>
                <select class="custom-select custom-select-md mr-4">
                    <option selected hidden>Sort</option>
                    <option value="Date">Date</option>
                    <option value="User">User</option>
                    <option value="Rating">Rating</option>
                </select>

            </form>
        </div>

        <% foodie.posts.forEach(function(p) { %>
        <div id="posts" class="col-md-4 mb-4">
            <a id="onePost" href="/foodies/<%= p.id %>">
                <div id="my-posts" class="card">
                    <img id="foodPic" src="<%= p.photo %>" alt="...">

                    <div class="card-body">

                        <div class="card-text d-flex justify-content-between">
                            <div>
                                <% for(let i = 0; i < p.rating; i++) { %>
                                <span class="shadow-star">★</span>
                                <% } %>
                            </div>
                            <div class="btn-group">
                                <button class="btn btn-md" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false"><i class="fas fa-ellipsis-v"></i></button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <form class="p-2 bd-highlight" action="/<%= p.id %>?_method=DELETE" method="POST">
                                        <button class="dropdown-item btn btn-outline-danger btn-sm" type="submit"><i
                                                class="far fa-trash-alt"></i> Delete</button>
                                    </form>
                                    <form class="p-2 bd-highlight" action="/foodies/<%= p.id %>/edit-post" method="GET"></form>
                                        <button class="dropdown-item btn btn-outline-danger btn-sm" type="submit"><i
                                                class="fas fa-user-edit"></i> Edit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div id="update" class="text-muted mr-auto p-2 bd-highlight"><small>Last updated:
                                <%= p.updatedAt.toLocaleDateString() %></small></div>
                    </div>
                </div>
            </a>
        </div>
        <% }); %>

    </div>
</div>

<!--CREATE NEW POST MODAL-->

<div class="modal fade bd-example-modal-lg update-post-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
aria-hidden="true">
<div class="modal-dialog modal-lg">
    <div class="modal-content">
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="#">FoodieGram</a>
            </nav>

            <div id="post-modal" class="mt-3">
                <h2>Create New Post</h2>
                <form action="/foodies" method="POST">
                    <div class="form-group">
                        <div id="img-place">
                            <input type="file" class="form-control-file" name="photo">
                        </div>
                    </div>
                    <div class="form-group star">
                        <div class="rating">
                            <label>
                                <input type="radio" name="rating" value="1" />
                                <span class="icon">★</span>
                            </label>
                            <label>
                                <input type="radio" name="rating" value="2" />
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                            </label>
                            <label>
                                <input type="radio" name="rating" value="3" />
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                            </label>
                            <label>
                                <input type="radio" name="rating" value="4" />
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                            </label>
                            <label>
                                <input type="radio" name="rating" value="5" />
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                                <span class="icon">★</span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group mt-0">
                        <input type="text" class="form-control" rows="3" name="caption" placeholder="Write a caption">
                    </div>
                    <div class="form-group">
                        <label for="restaurantName">Restaurant Name:</label>
                        <input type="text" class="form-control" name="restaurantName" placeholder="XYZ">
                    </div>
                    <div class="form-group">
                        <label for="restaurantAddr">Address:</label>
                        <input type="text" class="form-control" autocomplete="street-address"
                            name="restaurantAddr" placeholder="1234 Main St">
                    </div>
                    <div class="form-group">
                        <label for="cuisine">Cuisine:</label>
                        <select class="form-control" name="cuisine">
                            <option value="American">American</option>
                            <option value="Asian">Asian</option>
                            <option value="Mexican">Mexican</option>
                            <option value="Italian">Italian</option>
                            <option value="Middle Eastern">Middle Eastern</option>
                            <option value="Thai">Thai</option>
                            <option value="French">French</option>
                            <option value="Japanese">Japanese</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-around">
                        <button type="submit" class="btn btn-danger mb-2" data-dismiss="modal"
                            aria-label="Close">Cancel</button>
                        <button type="submit" class="btn btn-primary mb-2">Add Post</button>
                    </div>
                </form>
            </div>

    </div>
</div>
</div>

<%- include('../partials/footer') %>