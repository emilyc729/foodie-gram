<%- include('../partials/header') %>


<div class="box">
    <h1 class="ml-3">All Posts</h1>
    <div class="row no-gutters">
        <div class="col-md-12 mb-4">
            <form class="form-inline my-2 my-lg-0 justify-content-end mr-3" action="/foodies" method="GET">
                <input id="input-size" class="form-control mr-sm-2" type="search" name="foodInfo"
                    placeholder="search name or cuisine" value="" autocomplete="off">
                <select class="custom-select custom-select-md mr-4" name="sort">
                    <option value="" selected>Sort</option>
                    <option name="date" value="createdAt">Date</option>
                    <option name="rating" value="rating">Rating</option>
                    <option name="rating" value="comments">Comments</option>
                </select>
                <button class="btn btn-outline-primary my-2 my-sm-0 mr-5" type="submit">Query</button>
            </form>

        </div>


        <% if(Object.keys(foundPosts).length != 0) { %>

            <% foundPosts.forEach(function(p, idx) { %>

                <div class="col-md-4 mb-4">
        
                        <a id="onePost" href="#" data-toggle="modal" data-target=".post-details-modal-<%= p.id %>">
            
                            <div class="card">
            
                                <img id="foodPic" src="<%= p.photo %>" class="img-fluid" alt="<%= p.caption %>">
            
                                <div class="card-body">
                                    <div class="d-flex justify-content-around">
                                        <p><i class="far fa-comment-alt fa-flip-horizontal"> </i> <%= p.comments.length %> Comments</p>
                                        <p id="stars-section" class="card-text">
                                            <% for(let i = 0; i < p.rating; i++) { %>
                                            <span class="shadow-star">★</span>
                                            <% } %>
                                        </p>
                                    </div>
                                    <h5 class="card-title"><strong><%= foodie.username %>:</strong> <%= p.caption %></h5>
                                    <iframe width="400" height="100"
                                        src="https://www.google.com/maps/embed/v1/place?key=<%= process.env.API_KEY %>&q=<%= p.restaurantAddr %>"
                                        allowfullscreen></iframe>
            
                                    <p class="card-text"><small class="text-muted">Posted
                                            <%= p.createdAt.toLocaleDateString() %></small></p>
                                </div>
                            </div>
                        </a>
                    </div>

        <!--POST DETAILS MODAL-->
        <div class="modal fade bd-example-modal-lg post-details-modal-<%= p.id %>" tabindex="-1" role="dialog"
            aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <nav class="navbar navbar-expand-lg">
                        <a class="navbar-brand" href="#">FoodieGram</a>
                    </nav>
                    <div id="post-modal" class="mt-3">

                        <h1>Post Details</h1>

                        <div class="card">
                            <img id="foodPic" src="<%= p.photo %>" alt="food image">
                            <div class="card-body">
                                <p class="card-text star star-shadow">
                                    <% for(let i = 0; i < p.rating; i++) { %>
                                    <span class="shadow-star">★</span>
                                    <% } %>
                                </p>
                                <% foodies.forEach(function(foodie){ %>
                                    <% foundPosts.forEach(function(p, idx) { %>
                                <h5 class="card-title"><strong><%= foodie.username %>: <%= p.caption %></strong></h5>
                                    <% }); %>
                                <% }); %>
                                <p class="card-text">Restaurant Name: <%= p.restaurantName %></p>
                                <p class="card-text">Cuisine: <%= p.cuisine%></p>

                                <p class="card-text"><small class="text-muted">Last updated
                                        <%= p.updatedAt.toLocaleDateString() %></small></p>
                                <iframe width="500" height="350" frameborder="0" style="border:0"
                                    src="https://www.google.com/maps/embed/v1/place?key=<%= process.env.API_KEY %>&q=<%= p.restaurantAddr %>"
                                    allowfullscreen></iframe>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Comments:</h5>
                                <% p.comments.forEach(function(c) { %>
                                <form class="p-2 bd-highlight d-flex justify-content-between"
                                    action="/comments/<%= c.id %>?_method=DELETE" method="POST">
                                    <div>
                                        <% if(c.username === user.username) { %>
                                        <button class="btn btn-outline-danger btn-sm" type="submit"><i
                                                class="far fa-trash-alt"></i></button>
                                        <% } else { %>
                                        <button class="btn btn-outline-danger btn-sm invisible" type="submit"><i
                                                class="far fa-trash-alt"></i></button>
                                        <% } %>
                                        <span id="comment" class="card-text"><strong><%= c.username %></strong>
                                            <%= c.response %></span>
                                    </div>
                                    <div><small><%= c.createdAt.toLocaleString() %></small></div>
                                </form>

                                <% }); %>
                                <form action="/<%= p.id %>/comments" method="POST">
                                    <div class="form-group">
                                        <textarea class="form-control" name="response" rows="3"></textarea>
                                    </div>
                                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Comment</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <!--END OF MODAL-->

            <% }); %>

        <% } else { %>

            <% foodies.forEach(function(foodie){ %>
                <% foodie.posts.forEach(function(p, idx) { %>
                    
                        <div class="col-md-4 mb-4">
        
                                <a id="onePost" data-toggle="modal" data-target=".post-details-modal-<%= p.id %>">
                    
                                    <div class="card">
                    
                                        <img id="foodPic" src="<%= p.photo %>" class="img-fluid" alt="<%= p.caption %>">
                    
                                        <div class="card-body">
                                            <div class="d-flex justify-content-around">
                                                <p><i class="far fa-comment-alt fa-flip-horizontal"> </i> <%= p.comments.length %> Comments</p>
                                                <p id="stars-section" class="card-text">
                                                    <% for(let i = 0; i < p.rating; i++) { %>
                                                    <span class="shadow-star">★</span>
                                                    <% } %>
                                                </p>
                                            </div>
                                            <h5 class="card-title"><strong><%= foodie.username %>:</strong> <%= p.caption %></h5>
                                            <iframe width="400" height="100"
                                                src="https://www.google.com/maps/embed/v1/place?key=<%= process.env.API_KEY %>&q=<%= p.restaurantAddr %>"
                                                allowfullscreen></iframe>
                    
                                            <p class="card-text"><small class="text-muted">Posted
                                                    <%= p.createdAt.toLocaleDateString() %></small></p>
                                        </div>
                                    </div>
                                </a>
                            </div>
            
                <!--POST DETAILS MODAL-->
                <div class="modal fade bd-example-modal-lg post-details-modal-<%= p.id %>" tabindex="-1" role="dialog"
                    aria-labelledby="myLargeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <nav class="navbar navbar-expand-lg">
                                <a class="navbar-brand" href="#">FoodieGram</a>
                            </nav>
                            <div id="post-modal" class="mt-3">
        
                                <h1>Post Details</h1>
        
                                <div class="card">
                                    <img id="foodPic" src="<%= p.photo %>" alt="food image">
                                    <div class="card-body">
                                        <p class="card-text star star-shadow">
                                            <% for(let i = 0; i < p.rating; i++) { %>
                                            <span class="shadow-star">★</span>
                                            <% } %>
                                        </p>
                                        <h5 class="card-title"><strong><%= foodie.username %>: <%= p.caption %></strong></h5>
                                        <p class="card-text">Restaurant Name: <%= p.restaurantName %></p>
                                        <p class="card-text">Cuisine: <%= p.cuisine%></p>
        
                                        <p class="card-text"><small class="text-muted">Last updated
                                                <%= p.updatedAt.toLocaleDateString() %></small></p>
                                        <iframe width="500" height="350" frameborder="0" style="border:0"
                                            src="https://www.google.com/maps/embed/v1/place?key=<%= process.env.API_KEY %>&q=<%= p.restaurantAddr %>"
                                            allowfullscreen></iframe>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Comments:</h5>
                                        <% p.comments.forEach(function(c) { %>
                                        <form class="p-2 bd-highlight d-flex justify-content-between"
                                            action="/comments/<%= c.id %>?_method=DELETE" method="POST">
                                            <div>
                                                <% if(c.username === user.username) { %>
                                                <button class="btn btn-outline-danger btn-sm" type="submit"><i
                                                        class="far fa-trash-alt"></i></button>
                                                <% } else { %>
                                                <button class="btn btn-outline-danger btn-sm invisible" type="submit"><i
                                                        class="far fa-trash-alt"></i></button>
                                                <% } %>
                                                <span id="comment" class="card-text"><strong><%= c.username %></strong>
                                                    <%= c.response %></span>
                                            </div>
                                            <div><small><%= c.createdAt.toLocaleString() %></small></div>
                                        </form>
        
                                        <% }); %>
                                        <form action="/<%= p.id %>/comments" method="POST">
                                            <div class="form-group">
                                                <textarea class="form-control" name="response" rows="3"></textarea>
                                            </div>
                                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Comment</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    <!--END OF MODAL-->
            
                <% }); %>
                <% }); %>

        <% } %>

        
 
    </div>
</div>



<%- include('../partials/footer') %>