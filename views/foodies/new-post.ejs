<%- include('../partials/header') %>

    <div class="jumbotron">

        <h1>Create New Post</h1>
        <div class="container">
            <form action="/foodies" method="POST">
                <div class="form-group">
                    <label for="photo">Upload a Photo:</label>
                    <input type="file" class="form-control-file" name="photo">
                </div>
                <div class="form-group">
                    <label for="caption">Caption:</label>
                    <input type="text" class="form-control" name="caption" placeholder="place caption here">
                </div>
                <div class="form-group">
                    <label for="restaurantName">Restaurant Name:</label>
                    <input type="text" class="form-control" name="restaurantName" placeholder="XYZ">
                </div>
                <div class="form-group">
                    <label for="restaurantAddr">Address:</label>
                    <input type="text" class="form-control" autocomplete="street-address" name="restaurantAddr"
                        placeholder="1234 Main St">
                </div>
                <div class="form-group">
                    <label for="cuisine">Cuisine:</label>
                    <select class="form-control" name="cuisine">
                        <option value="American">American</option>
                        <option value="Asian">Asian</option>
                        <option value="Mexican">Mexican</option>
                        <option value="Italian">Italian</option>
                        <option value="Middle Eastern">Middle Eastern</option>
                        <option value="Thai">Thai</option>
                        <option value="French">French</option>
                        <option value="Japanese">Japanese</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <div class="rating">
                        <label>
                            <input type="radio" name="rating" value="1" />
                            <span class="icon">★</span>
                        </label>
                        <label>
                            <input type="radio" name="rating" value="2" />
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                        </label>
                        <label>
                            <input type="radio" name="rating" value="3" />
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                        </label>
                        <label>
                            <input type="radio" name="rating" value="4" />
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                        </label>
                        <label>
                            <input type="radio" name="rating" value="5" />
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                            <span class="icon">★</span>
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Add Post</button>
            </form>
        </div>

    </div>

</body>

</html>